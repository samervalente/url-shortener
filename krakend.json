{
  "version": 3,
  "name": "shortener-gateway",
  "timeout": "3000ms",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/v1/signup",
      "method": "POST",
      "backend": [
        {
          "host": ["http://iam-service:3003"],
          "url_pattern": "/signup"
        }
      ]
    },
    {
      "endpoint": "/api/v1/login",
      "method": "POST",
      "backend": [
        {
          "host": ["http://iam-service:3003"],
          "url_pattern": "/login"
        }
      ]
    },
    {
      "endpoint": "/api/short",
      "method": "POST",
      "backend": [
        {
          "host": ["http://shortener-backend:3006"],
          "url_pattern": "/api/short"
        }
      ]
    },
    {
      "endpoint": "/api/user",
      "method": "GET",
      "backend": [
        {
          "host": ["http://shortener-backend:3006"],
          "url_pattern": "/api/user"
        }
      ]
    },
    {
      "endpoint": "/api/{id}/origin",
      "method": "PATCH",
      "backend": [
        {
          "host": ["http://shortener-backend:3006"],
          "url_pattern": "/api/{id}/origin"
        }
      ]
    },
    {
      "endpoint": "/api/{id}",
      "method": "DELETE",
      "backend": [
        {
          "host": ["http://shortener-backend:3006"],
          "url_pattern": "/api/{id}"
        }
      ]
    }
  ]
}
